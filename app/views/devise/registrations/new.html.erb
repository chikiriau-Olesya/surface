<div class="enter">
  <div class="enter--wrapper">
    <div class="enter--wrapper--block">
      <h4 class ="A_H4">Регистрация</h4>
      <div class="enter--form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form--item form--item--email">
            <%= f.label "Почта", class: 'input--label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: " Ваш Email", class: 'input input--email' %>
          </div>
          <div class="form--item form--item--email">
            <%= f.label "Имя Фамилия", class: 'input--label'%>
            <%= f.text_field :username, autocomplete: "Иван Серфанутый" , class: 'input input--email'%>
          </div>

          <div class="form--item form--item--email">
            <%= f.label "Пароль", class: 'input--label'%>
            <% if @minimum_password_length %>
            <em class="input--text--desc">от <%= @minimum_password_length %> символов</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" , class: 'input input--email'%>
          </div>

          <div class="field">
            <%#= f.label :password_confirmation %>
            <%#= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Зарегистироваться", class: 'btn btn--main btn--enter' %>
          </div>
        <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>
