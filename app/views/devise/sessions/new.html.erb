<div class="enter">
  <div class="enter--wrapper">
    <div class="enter--wrapper--block">
      <h4 class ="A_H4">Войти в Surface</h4>
      <div class="enter--form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form--item form--item--email">
            <%= f.label "Почта", class: 'input--label' %>
            <%= f.email_field :email, autofocus: true,
            class: 'input input--email',
            autocomplete: "email" %>
          </div>

          <div class="form--item form--item--email">
            <%= f.label "Пароль", class: 'input--label' %>
            <%= f.password_field :password, class: 'input input--email', autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form--check">
              <%= f.check_box :remember_me %>
              <%= f.label 'Запомнить меня' %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Войти", class: 'btn btn--main btn--enter' %>
          </div>
        <% end %>
    </div>
    <div class="form--links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
