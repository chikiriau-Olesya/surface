<p id="notice"><%= notice %></p>

<div class="">
	Серфшколы в <%= @city.name %>
</div>

<div class="">
	<p>Мы нашли <%= @city.school.count %>
		<%= (@city.school.count ) == 1 ? 'Школу' : 'Школ'%>
	</p>
</div>


<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.description %></td>
        <td><%= school.longitude %></td>
        <td><%= school.latitude %></td>
        <td><%= school.city.name %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_city_path %>
<%= link_to 'New School', new_school_path %>

<%= react_component 'M_MainMap' %>
