<div class="card ml-5">
  <div class="card-body">
    <p>
      <b>Commenter:</b>
      <%= User.find(reply.user_id).email %>
    </p>
    <%= reply.body %>
    <%= link_to 'reply', new_post_coment_path(@post, parent_id: reply.id), remote: true, class: 'd-block' %>
  </div>
</div>
<% if reply.replies.any? %>
  <% reply.replies.each do |reply| %>
    <%= render partial: 'coments/reply', locals: { reply: reply } %>
  <% end %>
<% end %>
<div id="reply-form-<%= reply.id %>"></div>
