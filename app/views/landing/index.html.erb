            <div class="hero__blocks__main__bottom__leters">
              <%= image_tag "landing_img/su.svg"%>
            </div>
            <div class="hero__blocks__main__bottom__leters">
              <%= image_tag "landing_img/r.svg"%>
            </div>
            <div class="hero__blocks__main__bottom__leters">
