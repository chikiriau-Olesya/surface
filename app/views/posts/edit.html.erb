<h1>Editing Post</h1>

<%#= render 'form', post: @post %>


<% if @post.post_type.name == "magazine" %>
    <%= render 'formarticle', post: @post %>
  <% elsif @post.post_type.name == "sport" %>
    <%= render 'formsport', post: @post %>
  <% else %>
    <%= render 'form', post: @post %>
<% end %>


