<h1>Posts</h1>
<h2>All Categories</h2>
<% Category.all.each do |cat| %>
	<%= link_to cat.name, posts_path(category: cat.name) %> <br>
<% end %>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
			<th>PostType</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%#= link_to(image_tag(@post.image.thumb.url, alt: 'Image'), @post.image.url, target: '_blank') if @post.image? %>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
				<td>
				<% if post.category_id? %>
					<span>
					<%= post.category.name %>
					</span>
				<% end %>
				</td>
        <td><%= post.name %></td>
				<td><%= post.post_type %></td>
        <!-- <#%= link_to(image_tag(@post.image.thumb.url, alt: 'Image'), @post.image.url, target: '_blank') if @post.image? %> -->
        <td><%= post.image %></td>
        <td><%= post.title %></td>
        <td><#%= post.content.html_safe %></td>
        <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
        <td><%= post.comments.count %> <%= (post.comments.count) == 1 ? 'Comment' : 'Commentes'%></td>
        <td><%= link_to 'ðŸ‘€', post %></td>

				<!-- open view to delete and edit btn for admin in blog -->
				<% if user_signed_in? && current_user.isadmin == true %>
					<td><%= link_to 'ðŸ› ', edit_post_path(post) %></td>
					<td><%= link_to 'ðŸ—‘', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

