<!DOCTYPE html>
<html>
  <head>
    <!-- <title>Surface.surf</title> -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <%#= csp_meta_tag %>
    <%= display_meta_tags(default_meta_tags) %>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag Ckeditor.cdn_url %>
  </head>

  <body>
  <% if notice %>
     <p class="notice"><%= notice %></p>
   <% elsif alert %>
     <p class="alert"><%= alert %></p>
  <% end %>

<div class="top_menu">
    <% if user_signed_in? %>
      <%= link_to 'Account', current_user %> | <%= link_to 'Sign Out', destroy_user_session_path, method: :delete  %>
    <% else %>
      <%= link_to 'Sign In', new_user_session_path %> | <%= link_to 'Sign Up', new_user_registration_path %>
    <% end %>

    <% if user_signed_in? && current_user.isadmin == true%>
      <%= link_to "Settings", admin_path %>
    <% end %>
  </div>


  <% if user_signed_in?%>
    <%= react_component 'O_Header'%>
  <% end %>

    <%= yield %>
    <%= react_component 'O_Footer'%>
  </body>
</html>
