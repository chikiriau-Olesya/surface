<p id="notice"><%= notice %></p>

<h1>Направления</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Number of school</th>
      <th>Link to school list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td>
   				<%= image_tag(city.image.url, alt: 'Image') if city.image? %>
        </td>
        <td><%= city.description %></td>
        <td>
          <p><%= city.school.count %>
            <%= (city.school.count ) == 1 ? 'Школа' : 'Школ'%>
          </p>
        </td>
        <td><%= link_to city.name, schools_path(city: city.name) %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

